<Window x:Class="CryptoTool.Dialogues.PasswordDialogue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptoTool.Dialogues"
        mc:Ignorable="d"
        Title="Master Password" Height="150" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Please enter the master password for your keystore" Margin="8,4,8,4" />

        <TextBox Name="textBoxPassword" Grid.Row="1" VerticalAlignment="Center" Margin="8,4,8,4" />

        <Button Grid.Row="2" Content="Okay" Margin="8,4,8,4" HorizontalAlignment="Right" MinWidth="75" Click="Button_Click" />
    </Grid>
</Window>